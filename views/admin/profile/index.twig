{% extends "layouts/master.twig" %}

{% block title %}Profil Admin{% endblock %}
{% block page_subtitle %}Kelola Nama dan Email Anda {% endblock %}

{% block content %}
<style>
    .profile-header {
        background: linear-gradient(135deg, #A5C882, #3A6351); /* Hijau gradasi */
        color: #fff;
        border-radius: 12px 12px 0 0;
        padding: 2rem 2rem 3rem 2rem;
        position: relative;
    }

    .profile-avatar {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        border: 4px solid #fff;
        position: absolute;
        bottom: -50px;
        left: 2rem;
        background-color: #ffffff;
    }

    .section-body {
        background-color: #ffffff;
        padding: 3rem 2rem 2rem 2rem;
        border-radius: 0 0 12px 12px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.05);
    }

    .form-label {
        font-weight: 600;
    }

    .btn-save {
        background-color: #3A6351; /* Hijau tua */
        border: none;
        color: #FAFAFA;
        font-weight: 600;
    }

    .btn-save:hover {
        background-color: #2B4A3F; /* Sedikit lebih gelap saat hover */
    }
</style>


<div class="container my-5">
    <div class="bg-white shadow rounded">
        <div class="profile-header">
            <img src="https://ui-avatars.com/api/?name={{ session.user.nama | url_encode }}&background=3A6351 &color=fff&size=100"
                 alt="Avatar" class="profile-avatar">
            <div class="ms-5 ps-5">
                <h4 class="mb-1">{{ session.user.nama }}</h4>
                <p class="mb-0 text-white-50">{{ session.user.email }}</p>
            </div>
        </div>

        <div class="section-body">

            <form method="POST" action="{{ base_path() }}/admin/profile">
                <div class="row g-4">
                    <div class="col-md-6">
                        <label class="form-label">Nama</label>
                        <input type="text" class="form-control" name="nama" value="{{ admin.nama }}">
                    </div>

                    <div class="col-md-6">
                        <label class="form-label">Email</label>
                        <input type="email" class="form-control" name="email" value="{{ admin.email }}">
                    </div>
                </div>

                <div class="text-end mt-4">
                    <button type="submit" class="btn btn-save px-4 py-2 text-white">
                        <i></i> Simpan Profil
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}
