{% extends "layouts/master.twig" %}

{% block page_title %}Dashboard Admin{% endblock %}
{% block page_subtitle %}Selamat datang, <strong>{{ session.user.nama }}</strong>{% endblock %}

{% block content %}
<div class="row mt-4">
    <div class="col-md-4 mb-4">
        <div class="p-4 rounded shadow-sm d-flex align-items-center" style="background-color: #A5C882;">
            <i class="bi bi-briefcase-fill fs-2 text-white me-3"></i>
            <div>
                <h6 class="text-white mb-1">Total Lowongan</h6>
                <h4 class="text-white fw-bold">{{ totalLowongan }}</h4>
            </div>
        </div>
    </div>

    <div class="col-md-4 mb-4">
        <div class="p-4 rounded shadow-sm d-flex align-items-center" style="background-color: #3A6351;">
            <i class="bi bi-person-badge-fill fs-2 text-white me-3"></i>
            <div>
                <h6 class="text-white mb-1">Pengguna Terdaftar</h6>
                <h4 class="text-white fw-bold">{{ totalUser }}</h4>
            </div>
        </div>
    </div>

    <div class="col-md-4 mb-4">
        <div class="p-4 rounded shadow-sm d-flex align-items-center" style="background-color: #2E2E2E;">
            <i class="bi bi-envelope-paper-fill fs-2 text-white me-3"></i>
            <div>
                <h6 class="text-white mb-1">Lamaran Masuk</h6>
                <h4 class="text-white fw-bold">{{ totalPelamar }}</h4>
            </div>
        </div>
    </div>
</div>
{% endblock %}
