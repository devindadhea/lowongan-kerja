{% extends "layouts/master.twig" %}

{% block page_title %}Tambah Lowongan{% endblock %}
{% block page_subtitle %}Form untuk menambahkan lowongan baru{% endblock %}

{% block content %}
<div class="card p-4 shadow-sm">
    <form method="POST" action="{{ base_path() }}/admin/jobs/store">

    
        <div class="mb-3">
            <label class="form-label">Judul Lowongan</label>
            <input type="text" name="judul" class="form-control" required>
        </div>

        <div class="mb-3">
            <label class="form-label">Lokasi</label>
            <input type="text" name="judul" class="form-control" required>
        </div>

        <div class="mb-3">
            <label class="form-label">Gaji</label>
            <input type="text" name="gaji" class="form-control" placeholder="Contoh: 3500000" required>
        </div>
        

        <div class="mb-3">
            <label for="kategori" class="form-label">Kategori</label>
        <select name="kategori_id" class="form-select" style="color: #0000; background-color: #0000;">
            <option value="">-- Pilih Kategori --</option>
            {% for kat in categories %}
                <option value="{{ kat.id }}">{{ kat.nama_kategori }}</option>
            {% endfor %}
        </select>
        </div>

        <select name="status" class="form-select">
          <option value="aktif" {% if job.status == 'aktif' %}selected{% endif %}>Aktif</option>
          <option value="nonaktif" {% if job.status == 'nonaktif' %}selected{% endif %}>Nonaktif</option>
        </select>

        <br>
        <button type="submit" class="btn text-white" style="background-color: #436d46ff;">Simpan</button>
    </form>
</div>
{% endblock %}
