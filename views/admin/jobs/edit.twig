{% extends "layouts/master.twig" %}

{% block title %}Edit Lowongan{% endblock %}

{% block content %}
<div class="d-flex" style="min-height: 100vh; background-color: #FAFAFA;">
  <div class="flex-grow-1 p-4">
    <h2 class="fw-bold mb-3" style="color: #2E2E2E;">Edit Lowongan</h2>

    <form method="POST" action="{{ base_path() }}/admin/jobs/update/{{ job.id }}">
      <div class="mb-3">
        <label>Judul Lowongan</label>
        <input type="text" name="judul" class="form-control" value="{{ job.judul }}" required>
      </div>

      <div class="mb-3">
        <label>Lokasi</label>
        <input type="text" name="lokasi" class="form-control" value="{{ job.lokasi }}" required>
      </div>

      <div class="mb-3">
        <label for="gaji" class="form-label">Gaji</label>
        <input type="text" name="gaji" id="gaji" class="form-control" value="{{ job.gaji }}" placeholder="Contoh: 3500000" required>
      </div>

      <div class="mb-3">
        <label>Kategori</label>
        <select name="kategori_id" class="form-select" required>
          <option value="">-- Pilih Kategori --</option>
          {% for cat in categories %}
            <option value="{{ cat.id }}" {% if cat.id == job.kategori_id %}selected{% endif %}>
              {{ cat.nama_kategori }}
            </option>
          {% endfor %}
        </select>
      </div>

      <div class="mb-3">
        <label>Status</label>
        <select name="status" class="form-select">
          <option value="aktif" {% if job.status == 'aktif' %}selected{% endif %}>Aktif</option>
          <option value="nonaktif" {% if job.status == 'nonaktif' %}selected{% endif %}>Nonaktif</option>
        </select>
      </div>

      <button type="submit" class="btn text-white" style="background-color: #3A6351;">Update</button>
    </form>
  </div>
</div>
{% endblock %}
