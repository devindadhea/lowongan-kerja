<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <title>Ajukan Lamaran</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Bootstrap Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

  <style>
    body {
      background-color: #f8f9fa;
    }

    .form-container {
      background: white;
      padding: 2rem;
      border-radius: 1rem;
      box-shadow: 0 0 20px rgba(0, 0, 0, 0.05);
      max-width: 600px;
      margin: auto;
    }

    h3 {
      font-weight: 600;
    }

    .info-job p {
      margin-bottom: 0.3rem;
    }
  </style>
</head>
<body>

<div class="container my-5">
  <div class="form-container">
    <h3 class="mb-3">Ajukan Lamaran</h3>
    
    <div class="info-job mb-3">
      <p>Posisi: <strong>{{ job.judul }}</strong></p>
      <p>Perusahaan: <strong>{{ job.nama_perusahaan }}</strong></p>
      <p>Lokasi: <strong>{{ job.lokasi }}</strong></p>
    </div>

    {% if error %}
    <div class="alert alert-warning d-flex align-items-center" role="alert">
      <i class="bi bi-exclamation-triangle-fill me-2"></i> {{ error }}
    </div>
    {% endif %}

    <form method="POST" enctype="multipart/form-data" action="{{ base_path() }}/user/jobs/apply/{{ job.id }}">
      <div class="mb-3">
        <label for="cv" class="form-label">Upload CV Anda <span class="text-muted">(PDF atau DOC)</span></label>
        <input type="file" name="cv" id="cv" class="form-control" required>
      </div>

      <button type="submit" class="btn btn-primary w-100">
        <i class="bi bi-upload me-1"></i> Kirim Lamaran
      </button>
    </form>
  </div>
</div>

</body>
</html>
