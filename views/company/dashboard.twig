{% extends "layouts/master_company.twig" %}

{% block page_title %}Dashboard Perusahaan{% endblock %}
{% block page_subtitle %}
    Selamat datang, <strong>{{ session.user.nama_perusahaan }}</strong>
{% endblock %}

{% block content %}
<div class="row mt-4">
    <div class="col-md-4 mb-4">
        <div class="p-4 rounded shadow-sm d-flex align-items-center" style="background-color: #457B9D;">
            <i class="bi bi-briefcase-fill fs-2 text-white me-3"></i>
            <div>
                <h6 class="text-white mb-1">Lowongan Saya</h6>
                <h4 class="text-white fw-bold">{{ totalLowongan }}</h4>
            </div>
        </div>
    </div>

    <div class="col-md-4 mb-4">
        <div class="p-4 rounded shadow-sm d-flex align-items-center" style="background-color: #1D3557;">
            <i class="bi bi-people-fill fs-2 text-white me-3"></i>
            <div>
                <h6 class="text-white mb-1">Total Pelamar</h6>
                <h4 class="text-white fw-bold">{{ totalPelamar }}</h4>
            </div>
        </div>
    </div>

    <div class="col-md-4 mb-4">
        <div class="p-4 rounded shadow-sm d-flex align-items-center" style="background-color: #2B2D42;">
            <i class="bi bi-check-circle-fill fs-2 text-white me-3"></i>
            <div>
                <h6 class="text-white mb-1">Lamaran Diterima</h6>
                <h4 class="text-white fw-bold">{{ lamaranDiterima }}</h4>
            </div>
        </div>
    </div>
</div>

<div class="card shadow-sm border-0">
    <div class="card-header bg-white fw-bold">Lowongan Terbaru</div>
    <div class="card-body p-0">
        <table class="table table-hover mb-0">
            <thead class="table-light">
                <tr>
                    <th>Judul</th>
                    <th>Lokasi</th>
                    <th>Gaji</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                {% for job in recentJobs %}
                    <tr>
                        <td>{{ job.judul }}</td>
                        <td>{{ job.lokasi }}</td>
                        <td>{{ job.gaji }}</td>
                        <td>
                            {% if job.status == 'aktif' %}
                                <span class="badge bg-success">Aktif</span>
                            {% else %}
                                <span class="badge bg-secondary">Nonaktif</span>
                            {% endif %}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4" class="text-center py-3">Belum ada lowongan.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
