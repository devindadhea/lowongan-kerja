{% extends "layouts/master_company.twig" %}

{% block page_title %}Edit Lowongan{% endblock %}
{% block page_subtitle %}Perbarui informasi lowongan berikut{% endblock %}

{% block content %}
<div class="card shadow-sm border-0">
    <div class="card-body">
        <form action="{{ base_path() }}/company/jobs/update/{{ job.id }}" method="POST">
            <div class="mb-3">
                <label for="judul" class="form-label">Judul Lowongan</label>
                <input type="text" name="judul" id="judul" class="form-control" value="{{ job.judul }}" required>
            </div>

            <div class="mb-3">
            <label class="form-label">Gaji (rupiah)</label>
            <input type="text"
                name="gaji"
                class="form-control"
                value="{{ job.gaji }}"
                required>
            </div>


            <div class="mb-3">
                <label for="kategori" class="form-label">Kategori</label>
                <select name="kategori_id" class="form-select" style="color: #000000; background-color: #ffffff;">
                    <option value="">-- Pilih Kategori --</option>
                    {% for kat in categories %}
                        <option value="{{ kat.id }}">{{ kat.nama_kategori }}</option>
                    {% endfor %}
                </select>
            </div>


            <div class="mb-3">
                <label for="lokasi" class="form-label">Lokasi</label>
                <input type="text" name="lokasi" id="lokasi" class="form-control" value="{{ job.lokasi }}" required>
            </div>

            <div class="mb-3">
                <label for="deskripsi" class="form-label">Deskripsi</label>
                <textarea name="deskripsi" id="deskripsi" rows="5" class="form-control" required>{{ job.deskripsi }}</textarea>
            </div>

            <button type="submit" class="btn text-white" style="background-color: #1D3557;">Perbarui</button>
            <a href="{{ base_path() }}/company/jobs" class="btn btn-secondary">Batal</a>
        </form>
    </div>
</div>
{% endblock %}
