{% extends "layouts/master_company.twig" %}

{% block page_title %}Tambah Lowongan{% endblock %}
{% block page_subtitle %}Isi form untuk membuat lowongan baru{% endblock %}

{% block content %}
<div class="card shadow-sm border-0">
    <div class="card-body">
        <form action="{{ base_path() }}/company/jobs/store" method="POST">

            <div class="mb-3">
                <label for="kategori" class="form-label">Kategori</label>
                <select name="kategori_id" class="form-select" style="color: #000000; background-color: #ffffff;">
                <option value="">-- Pilih Kategori --</option>
                {% for kat in categories %}                        <option value="{{ kat.id }}">{{ kat.nama_kategori }}</option>
                    {% endfor %}
                </select>
            </div>

            <div class="mb-3">
                <label for="judul" class="form-label">Judul Lowongan</label>
                <input type="text" name="judul" id="judul" class="form-control" required>
            </div>

            <div class="mb-3">
        <label class="form-label">Gaji (rupiah)</label>
        <input type="text"
            name="gaji"
           class="form-control"
           placeholder="Contoh: 5500000"
           required>
            </div>

             <label class="form-label">Status</label>
            <select name="status" class="form-select">
                <option value="aktif" {{ job.status == 'aktif' ? 'selected' : '' }}>Aktif</option>
                <option value="nonaktif" {{ job.status == 'nonaktif' ? 'selected' : '' }}>Nonaktif</option>
            </select>

            <div class="mb-3">
                <label for="lokasi" class="form-label">Lokasi</label>
                <input type="text" name="lokasi" id="lokasi" class="form-control" required>
            </div>

            <div class="mb-3">
                <label for="deskripsi" class="form-label">Deskripsi</label>
                <textarea name="deskripsi" id="deskripsi" rows="5" class="form-control" required></textarea>
            </div>


            <button type="submit" class="btn text-white" style="background-color: #1D3557;">Simpan</button>
            <a href="{{ base_path() }}/company/jobs" class="btn btn-secondary">Batal</a>
        </form>
    </div>
</div>
{% endblock %}
