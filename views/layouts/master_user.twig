<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <title>{% block title %}Dashboard User{% endblock %}</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap, Icons, Tailwind -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
  <script src="https://cdn.tailwindcss.com"></script>

  <style>
    body {
      background-color: #f8fafc;
    }
    .content {
      margin-left: 4rem;
      transition: margin-left 0.3s ease;
    }
    #sidebar:hover ~ .content {
      margin-left: 13rem;
    }
  </style>
</head>
<body class="text-gray-800">

<!-- ===== SIDEBAR ===== -->
<div id="sidebar"
     class="group bg-white text-black w-16 hover:w-52 transition-all duration-300 flex flex-col items-center py-6 shadow-lg rounded-r-3xl overflow-hidden fixed h-full z-50">

  <!-- Menu Atas -->
  <div class="flex flex-col gap-4 mt-4 w-full items-center">

    <a href="{{ base_path() }}/user/home"
       class="no-underline flex items-center gap-3 px-4 py-2 hover:bg-gray-100 rounded-lg w-full group text-black">
      <i class="bi bi-search fs-5 text-black"></i>
      <span class="hidden group-hover:inline text-sm text-black">Cari Lowongan</span>
    </a>

    <a href="{{ base_path() }}/user/dashboard"
       class="no-underline flex items-center gap-3 px-4 py-2 hover:bg-gray-100 rounded-lg w-full group text-black">
      <i class="bi bi-house fs-5 text-black"></i>
      <span class="hidden group-hover:inline text-sm text-black">Dashboard</span>
    </a>

    <a href="{{ base_path() }}/user/profile"
       class="no-underline flex items-center gap-3 px-4 py-2 hover:bg-gray-100 rounded-lg w-full group text-black">
      <i class="bi bi-person-circle fs-5 text-black"></i>
      <span class="hidden group-hover:inline text-sm text-black">Profil Saya</span>
    </a>
  </div>

  <!-- Menu Logout Bawah -->
  <div class="mt-auto mb-4 w-full px-4">
    <a href="{{ base_path() }}/logout"
       onclick="return confirm('Yakin ingin logout?')"
       class="no-underline flex items-center gap-3 px-4 py-2 hover:bg-red-100 rounded-lg w-full group text-black">
      <i class="bi bi-box-arrow-right fs-5 text-black"></i>
      <span class="hidden group-hover:inline text-sm text-black">Keluar</span>
    </a>
  </div>
</div>


  <!-- ===== KONTEN UTAMA ===== -->
  <div class="content min-h-screen p-4">
    {% block content %}
    <div class="container">
      <h1 class="text-xl font-semibold">Selamat datang</h1>
      <p class="text-muted">Ini adalah halaman default user dashboard.</p>
    </div>
    {% endblock %}
  </div>

</body>
</html>
